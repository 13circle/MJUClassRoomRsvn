<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/calendar_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 날짜를 선택하세요"
        android:textSize="25sp"
        android:padding="15dp"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calendar_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/prev_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&lt;"
                android:background="@drawable/calendar_banner_cell_background"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_span="2" />
            <TextView
                android:id="@+id/mth_banner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="XXXX년 XX월"
                android:textColor="#fff"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_span="3" />
            <Button
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&gt;"
                android:background="@drawable/calendar_banner_cell_background"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_span="2" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="일"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="월"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="화"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="수"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="목"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="금"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
            <TextView
                android:text="토"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/calendar_header_cell_background"
                android:textSize="20sp"
                android:padding="5dp"/>
        </TableRow>

        <TableRow>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
        </TableRow>
        <TableRow>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
        </TableRow>
        <TableRow>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
        </TableRow>
        <TableRow>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
        </TableRow>
        <TableRow>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
            <LinearLayout android:background="@drawable/calendar_cell_background"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/to_mypage"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_selector_circle"
        android:gravity="center"
        android:textColor="#000"
        android:text="MY" />

</androidx.constraintlayout.widget.ConstraintLayout>